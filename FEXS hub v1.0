--// GUN MODEL ESP (PURPLE ALWAYS)
local gunESPObjects = {}

local function updateGunESP()
	if not Config.GunESP then return end
	for _,obj in ipairs(workspace:GetDescendants()) do
		if obj:IsA("Model") and obj.Name == "Gun" and not gunESPObjects[obj] then
			local h = Instance.new("Highlight", obj)
			h.FillColor = Color3.fromRGB(170,0,255)
			h.FillTransparency = 0.3

			local bb = Instance.new("BillboardGui", obj.PrimaryPart or obj:FindFirstChildWhichIsA("BasePart"))
			bb.Size = UDim2.fromScale(4,1)
			bb.StudsOffset = Vector3.new(0,3,0)
			bb.AlwaysOnTop = true

			local t = Instance.new("TextLabel", bb)
			t.Size = UDim2.fromScale(1,1)
			t.BackgroundTransparency = 1
			t.Text = "GUN HERE"
			t.TextScaled = true
			t.TextColor3 = Color3.fromRGB(170,0,255)
			t.TextStrokeTransparency = 0

			gunESPObjects[obj] = {h,bb}
		end
	end
end

RunService.Heartbeat:Connect(updateGunESP)

