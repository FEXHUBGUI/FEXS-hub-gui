-- Create ScreenGui
local gui = Instance.new("ScreenGui", game.Players.LocalPlayer:WaitForChild("PlayerGui"))
gui.Name = "FEXSGUIHub"
gui.ResetOnSpawn = false

-- Main frame
local mainFrame = Instance.new("Frame", gui)
mainFrame.Size = UDim2.new(0, 300, 0, 300)
mainFrame.Position = UDim2.new(0.5, -150, 0.5, -150)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Visible = true

-- Title
local title = Instance.new("TextLabel", mainFrame)
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
title.Text = "FEXS GUI Hub"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.SourceSansBold
title.TextSize = 20

-- Toggle GUI button
local toggleBtn = Instance.new("TextButton", gui)
toggleBtn.Size = UDim2.new(0, 100, 0, 30)
toggleBtn.Position = UDim2.new(0, 10, 0, 10)
toggleBtn.Text = "Toggle GUI"
toggleBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
toggleBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleBtn.MouseButton1Click:Connect(function()
	mainFrame.Visible = not mainFrame.Visible
end)

-- Speed Button
local speedBtn = Instance.new("TextButton", mainFrame)
speedBtn.Size = UDim2.new(0, 260, 0, 30)
speedBtn.Position = UDim2.new(0, 20, 0, 40)
speedBtn.Text = "Speed: Normal"
speedBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
speedBtn.TextColor3 = Color3.fromRGB(255, 255, 255)

local speeds = {16, 50, 100}
local labels = {"Normal", "Fast", "Very Fast"}
local currentSpeedIndex = 1

speedBtn.MouseButton1Click:Connect(function()
	currentSpeedIndex = currentSpeedIndex % #speeds + 1
	game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = speeds[currentSpeedIndex]
	speedBtn.Text = "Speed: " .. labels[currentSpeedIndex]
end)

-- Fly toggle
local flying = false
local flyBtn = Instance.new("TextButton", mainFrame)
flyBtn.Size = UDim2.new(0, 260, 0, 30)
flyBtn.Position = UDim2.new(0, 20, 0, 80)
flyBtn.Text = "Fly: OFF"
flyBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
flyBtn.TextColor3 = Color3.fromRGB(255, 255, 255)

local UIS = game:GetService("UserInputService")
local RS = game:GetService("RunService")

flyBtn.MouseButton1Click:Connect(function()
	flying = not flying
	flyBtn.Text = flying and "Fly: ON" or "Fly: OFF"
	local player = game.Players.LocalPlayer
	local char = player.Character
	local humanoidRoot = char:WaitForChild("HumanoidRootPart")

	local velocity = Instance.new("BodyVelocity")
	velocity.MaxForce = Vector3.new(100000, 100000, 100000)
	velocity.Velocity = Vector3.new(0, 0, 0)
	velocity.Parent = humanoidRoot

	local flySpeed = 100

	local function flyStep()
		if flying then
			local moveVec = Vector3.new()
			if UIS:IsKeyDown(Enum.KeyCode.W) then moveVec = moveVec + workspace.CurrentCamera.CFrame.LookVector end
			if UIS:IsKeyDown(Enum.KeyCode.S) then moveVec = moveVec - workspace.CurrentCamera.CFrame.LookVector end
			if UIS:IsKeyDown(Enum.KeyCode.A) then moveVec = moveVec - workspace.CurrentCamera.CFrame.RightVector end
			if UIS:IsKeyDown(Enum.KeyCode.D) then moveVec = moveVec + workspace.CurrentCamera.CFrame.RightVector end
			velocity.Velocity = moveVec.Unit * flySpeed
		else
			velocity.Velocity = Vector3.new(0, 0, 0)
			velocity:Destroy()
			RS:UnbindFromRenderStep("FlyMovement")
		end
	end

	if flying then
		RS:BindToRenderStep("FlyMovement", Enum.RenderPriority.Input.Value, flyStep)
	else
		RS:UnbindFromRenderStep("FlyMovement")
	end
end)

-- Box ESP
local espEnabled = false
local espBtn = Instance.new("TextButton", mainFrame)
espBtn.Size = UDim2.new(0, 260, 0, 30)
espBtn.Position = UDim2.new(0, 20, 0, 120)
espBtn.Text = "ESP: OFF"
espBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
espBtn.TextColor3 = Color3.fromRGB(255, 255, 255)

local function toggleESP()
	espEnabled = not espEnabled
	espBtn.Text = "ESP: " .. (espEnabled and "ON" or "OFF")

	for _, p in pairs(game.Players:GetPlayers()) do
		if p ~= game.Players.LocalPlayer and p.Character then
			local box = p.Character:FindFirstChild("ESPBox")
			if espEnabled then
				if not box then
					local selectionBox = Instance.new("SelectionBox", p.Character)
					selectionBox.Name = "ESPBox"
					selectionBox.Adornee = p.Character
					selectionBox.LineThickness = 0.05
					selectionBox.Color3 = Color3.new(1, 0, 0)
				end
			else
				if box then box:Destroy() end
			end
		end
	end
end

espBtn.MouseButton1Click:Connect(toggleESP)

-- Update ESP when players join
game.Players.PlayerAdded:Connect(function(player)
	player.CharacterAdded:Connect(function()
		wait(1)
		if espEnabled then
			toggleESP() toggleESP()
		end
	end)
end)
