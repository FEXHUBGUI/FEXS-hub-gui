--// Orion Standalone Loader (Self-contained, no HttpGet needed)
-- Drop this in a LocalScript inside StarterGui > ScreenGui

-- Orion Lib (embedded)
local OrionLib = loadstring([[
-- Orion Library stripped down for standalone
-- Credits to Shlexware (original Orion)
local Orion = {}
Orion.Flags = {}
Orion.Sections = {}
Orion.Tabs = {}
Orion.Elements = {}

local UIS = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")

-- Core GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "OrionUI"
ScreenGui.Parent = game:GetService("CoreGui")

-- Drag function
local function MakeDraggable(frame)
	local dragToggle, dragStart, startPos
	frame.InputBegan:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 then
			dragToggle = true
			dragStart = input.Position
			startPos = frame.Position
		end
	end)
	UIS.InputChanged:Connect(function(input)
		if dragToggle and input.UserInputType == Enum.UserInputType.MouseMovement then
			local delta = input.Position - dragStart
			frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
		end
	end)
	UIS.InputEnded:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 then
			dragToggle = false
		end
	end)
end

-- Window creation
function Orion:MakeWindow(config)
	local Window = Instance.new("Frame")
	Window.Size = UDim2.new(0, 500, 0, 300)
	Window.Position = UDim2.new(0.5, -250, 0.5, -150)
	Window.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
	Window.BorderSizePixel = 0
	Window.Visible = true
	Window.Active = true
	Window.Draggable = false
	Window.Parent = ScreenGui
	
	MakeDraggable(Window)
	
	local UICorner = Instance.new("UICorner", Window)
	UICorner.CornerRadius = UDim.new(0, 12)
	
	-- Title
	local Title = Instance.new("TextLabel", Window)
	Title.Text = config.Name or "Orion UI"
	Title.Size = UDim2.new(1, 0, 0, 30)
	Title.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
	Title.TextColor3 = Color3.fromRGB(255,255,255)
	Title.Font = Enum.Font.GothamBold
	Title.TextSize = 16
	
	-- Close Button
	local CloseBtn = Instance.new("TextButton", Title)
	CloseBtn.Text = "âœ•"
	CloseBtn.Size = UDim2.new(0, 30, 1, 0)
	CloseBtn.Position = UDim2.new(1, -30, 0, 0)
	CloseBtn.BackgroundTransparency = 1
	CloseBtn.TextColor3 = Color3.fromRGB(200, 200, 200)
	CloseBtn.Font = Enum.Font.Gotham
	CloseBtn.TextSize = 18
	CloseBtn.MouseButton1Click:Connect(function()
		Window.Visible = not Window.Visible
	end)
	
	-- Tab container
	local TabContainer = Instance.new("Frame", Window)
	TabContainer.Size = UDim2.new(0, 120, 1, -30)
	TabContainer.Position = UDim2.new(0,0,0,30)
	TabContainer.BackgroundColor3 = Color3.fromRGB(30,30,30)
	
	local ContentFrame = Instance.new("Frame", Window)
	ContentFrame.Size = UDim2.new(1, -120, 1, -30)
	ContentFrame.Position = UDim2.new(0,120,0,30)
	ContentFrame.BackgroundColor3 = Color3.fromRGB(40,40,40)
	
	Orion._tabContainer = TabContainer
	Orion._contentFrame = ContentFrame
	return Orion
end

-- Tabs
function Orion:MakeTab(config)
	local TabButton = Instance.new("TextButton", Orion._tabContainer)
	TabButton.Size = UDim2.new(1, 0, 0, 30)
	TabButton.Text = config.Name or "Tab"
	TabButton.BackgroundColor3 = Color3.fromRGB(45,45,45)
	TabButton.TextColor3 = Color3.fromRGB(200,200,200)
	TabButton.Font = Enum.Font.Gotham
	TabButton.TextSize = 14
	
	local Page = Instance.new("ScrollingFrame", Orion._contentFrame)
	Page.Visible = false
	Page.Size = UDim2.new(1,0,1,0)
	Page.BackgroundTransparency = 1
	Page.CanvasSize = UDim2.new(0,0,5,0)
	
	TabButton.MouseButton1Click:Connect(function()
		for _,v in ipairs(Orion._contentFrame:GetChildren()) do
			if v:IsA("ScrollingFrame") then v.Visible = false end
		end
		Page.Visible = true
	end)
	
	if #Orion._contentFrame:GetChildren() == 1 then
		Page.Visible = true
	end
	
	return Page
end

-- Toggle
function Orion:MakeToggle(tab, config)
	local Toggle = Instance.new("TextButton", tab)
	Toggle.Size = UDim2.new(1, -10, 0, 30)
	Toggle.Position = UDim2.new(0,5,0, #tab:GetChildren() * 35)
	Toggle.BackgroundColor3 = Color3.fromRGB(55,55,55)
	Toggle.Text = config.Name or "Toggle"
	Toggle.TextColor3 = Color3.fromRGB(255,255,255)
	Toggle.Font = Enum.Font.Gotham
	Toggle.TextSize = 14
	
	local state = false
	Toggle.MouseButton1Click:Connect(function()
		state = not state
		Toggle.BackgroundColor3 = state and Color3.fromRGB(0,150,100) or Color3.fromRGB(55,55,55)
		if config.Callback then config.Callback(state) end
	end)
end

return Orion
]])()

--// Create Window
local Window = OrionLib:MakeWindow({Name = "Universal Hub"})

--// Tabs
local mainTab = OrionLib:MakeTab({Name = "Main"})
local playerTab = OrionLib:MakeTab({Name = "Player"})
local visualTab = OrionLib:MakeTab({Name = "Visuals"})

--// Main Features
OrionLib:MakeToggle(mainTab, {
	Name = "Rejoin",
	Callback = function(state)
		if state then
			game:GetService("TeleportService"):Teleport(game.PlaceId, game.Players.LocalPlayer)
		end
	end
})

--// Player Features
OrionLib:MakeToggle(playerTab, {
	Name = "Fly",
	Callback = function(state)
		-- Simple Fly toggle
		local lp = game.Players.LocalPlayer
		local char = lp.Character
		local hrp = char and char:FindFirstChild("HumanoidRootPart")
		if state and hrp then
			local BV = Instance.new("BodyVelocity", hrp)
			BV.Velocity = Vector3.zero
			BV.MaxForce = Vector3.new(4000,4000,4000)
			OrionLib._flyBV = BV
		else
			if OrionLib._flyBV then OrionLib._flyBV:Destroy() end
		end
	end
})

--// ESP (smaller tags, clean chams)
OrionLib:MakeToggle(visualTab, {
	Name = "ESP (Chams + NameTags)",
	Callback = function(state)
		local players = game:GetService("Players")
		if state then
			for _,plr in pairs(players:GetPlayers()) do
				if plr ~= players.LocalPlayer and plr.Character then
					local highlight = Instance.new("Highlight", plr.Character)
					highlight.FillTransparency = 0.8
					highlight.OutlineColor = Color3.fromRGB(0,255,0)
					highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
					
					local tag = Instance.new("BillboardGui", plr.Character:FindFirstChild("Head") or plr.Character:FindFirstChildWhichIsA("BasePart"))
					tag.Size = UDim2.new(0,100,0,20)
					tag.StudsOffset = Vector3.new(0,2,0)
					tag.AlwaysOnTop = true
					
					local label = Instance.new("TextLabel", tag)
					label.Size = UDim2.new(1,0,1,0)
					label.Text = plr.Name
					label.TextSize = 12 -- smaller, cleaner
					label.TextColor3 = Color3.fromRGB(0,255,0)
					label.BackgroundTransparency = 1
					label.Font = Enum.Font.GothamBold
				end
			end
		else
			for _,plr in pairs(players:GetPlayers()) do
				if plr.Character then
					if plr.Character:FindFirstChildOfClass("Highlight") then plr.Character:FindFirstChildOfClass("Highlight"):Destroy() end
					if plr.Character:FindFirstChildOfClass("BillboardGui") then plr.Character:FindFirstChildOfClass("BillboardGui"):Destroy() end
				end
			end
		end
	end
})
