-- Create ScreenGui
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "Murder Town ULTIMATE Gui(0.1)"
screenGui.Parent = playerGui

-- Create Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 150)
frame.Position = UDim2.new(0.05, 0, 0.2, 0)
frame.BackgroundColor3 = Color3.fromRGB(255, 215, 0) -- Gold color
frame.BackgroundTransparency = 0.3 -- Slightly invisible
frame.BorderSizePixel = 0
frame.Parent = screenGui

-- Create Button
local button = Instance.new("TextButton")
button.Size = UDim2.new(0.6, 0, 0.3, 0)
button.Position = UDim2.new(0.2, 0, 0.35, 0)
button.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
button.BackgroundTransparency = 0.2
button.TextColor3 = Color3.new(1, 1, 1)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 24
button.Text = "ESP: OFF"
button.Parent = frame

-- ESP Toggle Logic
local espEnabled = false

local function toggleESP()
    espEnabled = not espEnabled
    button.Text = "ESP: " .. (espEnabled and "ON" or "OFF")
    
    -- ESP logic goes here:
    if espEnabled then
        print("ESP ENABLED")
        -- Insert your ESP enabling code here
    else
        print("ESP DISABLED")
        -- Insert your ESP disabling code here
    end
end

button.MouseButton1Click:Connect(toggleESP)
